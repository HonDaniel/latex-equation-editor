/* General resets */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Arial', sans-serif;
  background-color: #f4f4f4;
  color: #333;
  line-height: 1.6;
}

/* Flexbox utility */
.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Add global styles for buttons */
button {
  cursor: pointer;
  border: none;
  border-radius: 4px;
  padding: 10px 15px;
  background-color: #007bff;
  color: white;
  font-size: 14px;
  transition: background-color 0.3s;
}

button:hover {
  background-color: #0056b3;
}



